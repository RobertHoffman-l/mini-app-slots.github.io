    <div class="container">
        <h1>üé∞ –ö–∞–∑–∏–Ω–æ üé∞</h1>
        <div class="slots">
            <div class="slot" id="slot1">üçí</div>
            <div class="slot" id="slot2">üçã</div>
            <div class="slot" id="slot3">üçä</div>
        </div>
        <button id="spinButton">–ò—Å–ø—ã—Ç–∞—Ç—å —É–¥–∞—á—É</button>
        <div class="result" id="result"></div>
    </div>

    <script>
        const emojis = ['üçí', 'üçã', 'üçä', 'üçá', 'üçâ', 'üçì', '7Ô∏è‚É£'];
        const spinButton = document.getElementById('spinButton');
        const resultDiv = document.getElementById('result');
        const slots = [
            document.getElementById('slot1'),
            document.getElementById('slot2'),
            document.getElementById('slot3')
        ];
        
        // –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è Telegram WebApp
        Telegram.WebApp.ready();
        Telegram.WebApp.expand();
        
        let isSpinning = false;
        
        function getRandomEmoji() {
            return emojis[Math.floor(Math.random() * emojis.length)];
        }
        
        function spinSlot(slotElement, duration, finalEmoji) {
            const startTime = Date.now();
            const spinInterval = setInterval(() => {
                slotElement.textContent = getRandomEmoji();
            }, 100);
            
            setTimeout(() => {
                clearInterval(spinInterval);
                slotElement.textContent = finalEmoji;
            }, duration);
        }
        
        function checkWin(slotValues) {
            // –í—Å–µ —Ç—Ä–∏ –æ–¥–∏–Ω–∞–∫–æ–≤—ã–µ - –±–æ–ª—å—à–æ–π –≤—ã–∏–≥—Ä—ã—à
            if (slotValues[0] === slotValues[1] && slotValues[1] === slotValues[2]) {
                return { win: true, message: '–î–∂–µ–∫–ø–æ—Ç! üéâ' };
            }
            
            // –î–≤–∞ –æ–¥–∏–Ω–∞–∫–æ–≤—ã—Ö - –º–∞–ª–µ–Ω—å–∫–∏–π –≤—ã–∏–≥—Ä—ã—à
            if (slotValues[0] === slotValues[1] || 
                slotValues[1] === slotValues[2] || 
                slotValues[0] === slotValues[2]) {
                return { win: true, message: '–ú–∞–ª–µ–Ω—å–∫–∏–π –≤—ã–∏–≥—Ä—ã—à! üëç' };
            }
            
            // –ù–µ—Ç —Å–æ–≤–ø–∞–¥–µ–Ω–∏–π
            return { win: false, message: '–ü–æ–ø—Ä–æ–±—É–π—Ç–µ –µ—â–µ —Ä–∞–∑! üòä' };
        }
        
        spinButton.addEventListener('click', () => {
            if (isSpinning) return;
            
            isSpinning = true;
            spinButton.disabled = true;
            resultDiv.textContent = '';
            resultDiv.className = 'result';
            
            // –ì–µ–Ω–µ—Ä–∏—Ä—É–µ–º —Ñ–∏–Ω–∞–ª—å–Ω—ã–µ –∑–Ω–∞—á–µ–Ω–∏—è –¥–ª—è —Å–ª–æ—Ç–æ–≤
            const finalValues = [
                getRandomEmoji(),
                getRandomEmoji(),
                getRandomEmoji()
            ];
            
            // –ó–∞–ø—É—Å–∫–∞–µ–º –∞–Ω–∏–º–∞—Ü–∏—é –¥–ª—è –∫–∞–∂–¥–æ–≥–æ —Å–ª–æ—Ç–∞ —Å —Ä–∞–∑–Ω–æ–π –¥–ª–∏—Ç–µ–ª—å–Ω–æ—Å—Ç—å—é
            spinSlot(slots[0], 1000, finalValues[0]);
            spinSlot(slots[1], 1500, finalValues[1]);
            spinSlot(slots[2], 2000, finalValues[2]);
            
            // –ü–æ—Å–ª–µ –∑–∞–≤–µ—Ä—à–µ–Ω–∏—è –∞–Ω–∏–º–∞—Ü–∏–∏ –ø—Ä–æ–≤–µ—Ä—è–µ–º —Ä–µ–∑—É–ª—å—Ç–∞—Ç
            setTimeout(() => {
                const result = checkWin(finalValues);
                resultDiv.textContent = result.message;
                resultDiv.classList.add(result.win ? 'win' : 'lose');
                
                isSpinning = false;
                spinButton.disabled = false;
                
                // –í–∏–±—Ä–∞—Ü–∏—è –ø—Ä–∏ –≤—ã–∏–≥—Ä—ã—à–µ
                if (result.win && Telegram.WebApp.HapticFeedback) {
                    Telegram.WebApp.HapticFeedback.impactOccurred('heavy');
                }
            }, 2100);
        });
    </script>
